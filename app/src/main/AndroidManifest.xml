<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.delacruz.ramon.fridgandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.PantryActivity"
            android:label="My Pantry List" />
        <activity
            android:name=".ui.GroceryActivity"
            android:label="My Grocery List" />
        <activity android:name=".ui.PantryDetailActivity" />
        <activity android:name=".ui.GroceryDetailActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.NotesScrollingActivity"
            android:label="@string/title_activity_notes_scrolling"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>