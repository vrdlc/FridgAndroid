<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ramon.fridgandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PantryActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.ramon.fridgandroid.MainActivity"/>
        </activity>
        <activity android:name=".GroceryActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.ramon.fridgandroid.MainActivity"/>
        </activity>
        <activity android:name=".EverythingActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.example.ramon.fridgandroid.MainActivity"/>
        </activity>
    </application>

</manifest>