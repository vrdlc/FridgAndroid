<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="FridgAndroid is currently being created by Virgilio Ramon de la Cruz, 2016. It came about one day when I realized that I had multiple half-bags of flour at home because I could never remember exactly what staples and long term dry goods I had at home while at the store."
        android:textSize="15sp"
        android:id="@+id/textView"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:paddingBottom="10dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="I made this for my family to use, and honestly never thought it'd actually get this far. I hope it works so well for you that you forget that you're even using it. This is very much a work in progress, so hopefully you'll stick around to see what it is exactly I want this to be."
        android:textSize="15sp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/thanks_text"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:textAlignment="center"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Story"
        android:id="@+id/textView8"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>